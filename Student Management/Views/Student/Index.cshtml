@model IEnumerable<Student_Management.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<style>
  
    .student-card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        background: #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 30px;
    }

        .student-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

    .card-img-top-custom {
        height: 200px;
        object-fit: cover; 
        border-bottom: 3px solid #f0f2f5;
    }

    .badge-custom {
        background: linear-gradient(45deg, #667eea, #764ba2);
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 20px;
        color: white;
    }

    .action-btn-group {
        background: #f8f9fa;
        padding: 15px;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: space-between;
    }

    .page-header {
        background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 40px 0;
        border-radius: 15px;
        margin-bottom: 30px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>

<div class="container mt-4">

    <div class="page-header">
        <h1>👨‍🎓 Students Directory</h1>
        <p class="mb-0">Manage your students and their courses efficiently</p>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg"></i> + Add New Student
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card student-card">

                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="~/images/@item.ImageURL" class="card-img-top card-img-top-custom" alt="@item.Name">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top card-img-top-custom" alt="No Image">
                    }

                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="text-muted small mb-1">
                            <i class="bi bi-envelope"></i> @item.Email
                        </p>
                        <p class="text-muted small mb-2">
                            <i class="bi bi-geo-alt-fill text-danger"></i> @item.Address
                        </p>

                        <div class="mb-3">
                            <span class="badge badge-custom">
                                @(item.Course?.CourseName ?? "Unassigned")
                            </span>
                        </div>
                    </div>

                    <div class="action-btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill">
                            Profile
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-warning" title="Edit">
                                ✏️
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light btn-sm text-danger" title="Delete">
                                🗑️
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h3 class="text-muted">No students found!</h3>
            <p>Start by adding a new student.</p>
        </div>
    }
</div>