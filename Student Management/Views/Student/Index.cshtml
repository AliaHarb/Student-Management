@model IEnumerable<Student_Management.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

@* ... نفس الستايل الخاص بك يظل كما هو دون تغيير ... *@

<div class="container mt-4">
    <div class="page-header">
        <h1>👨‍🎓 Students Directory</h1>
        <p class="mb-0">Manage your students and their courses efficiently</p>
    </div>

    
    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex justify-content-end mb-4">
            <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill px-4">
                <i class="bi bi-plus-lg"></i> + Add New Student
            </a>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card student-card">
                   
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        @* ... بقية التفاصيل ... *@
                    </div>

                    <div class="action-btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill">
                            Profile
                        </a>

                       
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-warning" title="Edit">
                                    ✏️
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light btn-sm text-danger" title="Delete">
                                    🗑️
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    @* ... الجزء الخاص بـ No students found ... *@
</div>