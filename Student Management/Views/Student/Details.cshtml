@model Student

@{
    ViewData["Title"] = "Student Profile";
}

<style>
    .profile-card {
        background: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1); 
        transition: transform 0.3s;
        border: none;
    }

        .profile-card:hover {
            transform: translateY(-5px); 
        }

    .card-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        height: 150px;
        position: relative;
    }

    .profile-img-container {
        position: absolute;
        bottom: -50px;
        left: 50%;
        transform: translateX(-50%);
    }

    .profile-img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%; 
        border: 5px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .card-body-custom {
        padding-top: 60px; 
        text-align: center;
        padding-bottom: 30px;
    }

    .student-name {
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .student-course {
        color: #6c757d;
        font-weight: 500;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .info-item {
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 8px;
        margin: 5px 0;
        font-size: 0.95rem;
    }

    .action-buttons .btn {
        border-radius: 20px;
        padding: 8px 25px;
        margin: 0 5px;
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card profile-card">

                <div class="card-header-custom">
                    <div class="profile-img-container">
                        @if (!string.IsNullOrEmpty(Model.ImageURL))
                        {
                            <img src="~/images/@Model.ImageURL" class="profile-img" alt="@Model.Name" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/150" class="profile-img" alt="No Image" />
                        }
                    </div>
                </div>

                <div class="card-body card-body-custom">
                    <h2 class="student-name">@Model.Name</h2>
                    <div class="info-item">
                        <strong><i class="bi bi-envelope"></i> Email:</strong> @Model.Email
                    </div>

                    <div class="info-item">
                        <strong><i class="bi bi-calendar"></i> Age:</strong> @Model.Age years
                    </div>

                    <p class="student-course">
                        <i class="bi bi-book"></i>
                        @(Model.Course?.CourseName ?? "No Course Assigned")
                    </p>

                    <div class="row justify-content-center mb-4">
                        <div class="col-8">
                            <div class="info-item">
                                <strong>ID:</strong> #@Model.Id
                            </div>
                            <div class="info-item">
                                <strong>Address:</strong> @Model.Address
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger shadow-sm">
                            Delete
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    Back to List
                </a>
                <a asp-action="Create" class="btn btn-primary shadow">
                    Add New Student
                </a>
            </div>

        </div>
    </div>
</div>